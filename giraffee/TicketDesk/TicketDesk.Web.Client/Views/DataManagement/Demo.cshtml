@using TicketDesk.Localization.Views.DataManagement

@section title
{
    @Demo.Title
}
<div class="contentContainer">
    <h2>@Demo.Header</h2>
    
    <div>@Html.ActionLink(Demo.RemoveDemoData, "RemoveDemoData")</div>
    <p>
        @if (ViewBag.DemoDataRemoved ?? false)
        {
            <span>@Demo.Removed</span>
        }
        <div>@Html.ActionLink(Demo.CreateDemoData, "CreateDemoData")</div>
        @if (ViewBag.DemoDataCreated ?? false)
        {
            <span>@Demo.Created</span>
        }
    </p>
</div>