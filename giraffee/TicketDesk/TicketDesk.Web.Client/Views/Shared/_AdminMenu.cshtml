@using TicketDesk.Localization.Views.Shared
<div class="form-group">
    @if (User.Identity.IsAuthenticated && User.IsInRole("TdAdministrators"))
    {
        <div class="input-group input-group-sm">
            <span class="dropdown">
                <button href="#" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-gears"></i>
                    <span class="hidden-sm hidden-xs">@_Layout.Settings</span>
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right" role="menu">
                    @Html.Partial("_AdminMenuItems")
                </ul>
            </span>
        </div>
    }


</div>