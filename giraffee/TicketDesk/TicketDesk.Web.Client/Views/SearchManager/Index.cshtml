@using TicketDesk.Localization.Views.SearchManager

@section title
{
     @Index.Title
}
<div class="contentContainer">
    <h2>@Index.Header</h2>
    <p>
        

    </p>
    <div>@Html.ActionLink(Index.RemoveSearchIndex, "RemoveIndex")</div>
    <p>
        @if (ViewBag.IndexRemoved ?? false)
        {
            <span>@Index.Removed</span>
        }
    </p>
   
    <div>@Html.ActionLink(Index.PopulateSearchIndex, "PopulateIndex")</div>
